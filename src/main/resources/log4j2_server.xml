<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- For FINN's way of logging see https://confluence.finn.no/display/TEKK/Best+practices+for+Logging -->
    <properties>
        <property name="log.dir">logs</property>
    </properties>
    <appenders>
        <RollingRandomAccessFile name="PLAIN_FILE" fileName="${sys:log.dir}/${project.artifactId}.log" append="true" filePattern="${sys:log.dir}/${project.artifactId}.log.day-%d{dd}.gz">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%-5p] [%d{ISO8601}] [%-15t] %m  [%c{1}]%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="500MB"/>
            </Policies>
        </RollingRandomAccessFile>
        <RollingRandomAccessFile name="JSON_FILE" fileName="${sys:log.dir}/${project.artifactId}.json.log" append="true" filePattern="${sys:log.dir}/${project.artifactId}.json.log.%d{dd}">
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <LogStashJSONLayout compact="true" newline="true" properties="true"/>
            <Policies><TimeBasedTriggeringPolicy /></Policies>
            <DefaultRolloverStrategy max="1"/>
        </RollingRandomAccessFile>
    </appenders>
    <loggers>
        <logger name="no.finntech.commons.service.BuildInfoUtil" level="info" />
        <root level="warn">
            <appender-ref ref="PLAIN_FILE"/>
            <appender-ref ref="JSON_FILE"/>
        </root>
    </loggers>
</configuration>